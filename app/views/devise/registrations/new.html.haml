= render "layouts/header"
.form
  %h2.form-title 新規登録
  = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :名前, class: "field__text"
      = f.text_field :nickname, autofocus: true, class: "field__input"
    .field
      = f.label :メールアドレス, class: "field__text"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input"
    .field
      = f.label :パスワード, class: "field__text"
      = f.password_field :password, placeholder: "#{@minimum_password_length} 文字以上の半角英数字", autocomplete: "new-password", class: "field__input"
    .field
      = f.label :パスワード（確認）, class: "field__text"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "field__input"
    = f.submit "新規登録", class: "action"