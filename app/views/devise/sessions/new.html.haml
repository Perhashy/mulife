= render "layouts/header"
.form
  %h2.form-title ログイン
  = form_with model: @user, url: session_path(resource_name), local: true do |f|
    .field
      = f.label :メールアドレス, class: "field__text"
      = f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "field__input"
    .field
      = f.label :パスワード, class: "field__text"
      = f.password_field :password, placeholder:"パスワード", autocomplete: "current-password", class: "field__input"
    - if devise_mapping.rememberable?
      .remember
        = f.check_box :remember_me
        = f.label :ログイン状態を保存する
      = f.submit "ログイン", class: "action"

