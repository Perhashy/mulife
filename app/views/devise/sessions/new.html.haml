= render "layouts/header"
.form
  %h1 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-field
      = f.label :email
      .form-field__title
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "title-input"
    .form-field
      = f.label :password
      .form-field__title
        = f.password_field :password, autocomplete: "current-password", class: "title-input"
    - if devise_mapping.rememberable?
      .form-field
        = f.check_box :remember_me
        = f.label :remember_me
    .form-action
      = f.submit "ログイン", class: "form-action-submit"
  = render "devise/shared/links"
