%header.header
  %a{href: root_path}
    = image_tag "MuLife 300×100.png", size: "300x100", class: "header-image"
  - if user_signed_in?
    .header-user
      = link_to image_tag("投稿.png"), new_content_path, class: "header-user__btn"
      = link_to image_tag("#{current_user.image}"), user_path(current_user), class: "header-user__image"
  - else
    .header-user
      = link_to image_tag("登録.png"), new_user_registration_path, class: "header-user__btn"
      = link_to image_tag("ログイン.png"), new_user_session_path, class: "header-user__btn"
