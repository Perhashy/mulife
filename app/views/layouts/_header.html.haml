%header.header
  %a{href: root_path}
    = image_tag "MuLife 300×100.png", size: "300x100"
  - if user_signed_in?
    .header-user
      %a{href: new_content_path}
        = image_tag "投稿.png", class: "header-user__upload"
      %a{href: user_path(current_user), class: "header-user__image"}
        = image_tag "#{current_user.image}", class: "header-user__image-btn"
  - else
    .header-user
      %a{href: new_user_registration_path}
        = image_tag "登録.png", class: "header-user__upload"
      %a{href: new_user_session_path, class: "header-user__edit"}
        = image_tag "ログイン.png", class: "header-user__edit-btn"
