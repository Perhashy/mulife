!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Mulife
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    :javascript
      audiojs.events.ready(function() {
      var as = audiojs.createAll();
      });

    %header.header
      %a{href: root_path}
        = image_tag "logo.jpg", size: "300x100"
      - if user_signed_in?
        .header-user
          = link_to "新規投稿", new_content_path, class: "header-user__upload"
          .header-user__edit
            = link_to "edit", destroy_user_session_path, method: :delete
      - else
        .header-user
          = link_to "新規登録", new_user_registration_path, class: "header-user__upload"
          .header-user__edit
            = link_to "ログイン", new_user_session_path
    = yield
