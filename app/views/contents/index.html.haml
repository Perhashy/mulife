.wrapper
  .side
    .side-form
      %input{name: "name", type: "text", class: "side-form__input"}
      %input{type: "submit", value: "検索", class: "side-form__submit"}
    .side-home
      = link_to "ホームへ", root_path, class: "side-home"
  .main
    - @contents.each do |content|
      .content
        .content-user
          = link_to content.title, content, method: :get
        .content-music
          = audio_tag content.music, class: "content-music__box"
        .content-text
          = simple_format(content.message)